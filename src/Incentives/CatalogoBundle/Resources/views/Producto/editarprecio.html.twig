{% extends "::basePopLte.html.twig" %}

{% block title %}Producto - Editar Precio{% endblock %}

{% block content %}

     <div class="">
          <div class="modal-dialog box box-warning">
            <div class="modal-content">
              <div class="modal-header bg-black">
                <h4 class="modal-title">Agregar Precio</h4>
              </div>
              <form action="{{ path('producto_editarprecio') }}" method="POST"  class="form-horizontal">
              <div class="modal-body">
                <div class="form-group">
                  <label class="col-sm-2 control-label">{{ form_label(form.proveedor, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.proveedor, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">{{ form_label(form.precio, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.precio, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">{{ form_label(form.precioDolares, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.precioDolares, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">{{ form_label(form.principal, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.principal, { 'attr': {'class': 'checkbox'} }) }}
                  </div>
                </div>
                <input type='hidden' name='id' value={{ id }}>
                {{ form_widget(form._token) }}
              </div>
              <div class="modal-footer bg-black">
                <button class="btn btn-warning bg-black" type="submit">Enviar</button>
              </div>
              </form>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
    </div>
{% endblock %}
