{% extends "::basePopLte.html.twig" %}

{% block title %}Catálogo - Agregar Promoción{% endblock %}

{% block content %}

     <div class="">
          <div class="modal-dialog box box-warning">
            <div class="modal-content">
              <div class="modal-header bg-black">
                <h4 class="modal-title">Agregar Promoción</h4>
              </div>
              <form action="{{ path('promociones_nuevo', {'premio': premio}) }}" method="POST"  class="form-horizontal">
              <div class="modal-body">
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.nombre, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.descripcion, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.puntos, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.puntos, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.cantidad, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.fechaInicio, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.fechaInicio, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.fechaFin, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.fechaFin, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                {{ form_widget(form._token) }}
              </div>
              <div class="modal-footer bg-black">
                <button class="btn btn-warning bg-black" type="submit">Enviar</button>
              </div>
              </form>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script>
        $("#promociones_fechaInicio").datepicker({ format: 'yyyy-mm-dd' });
        $("#promociones_fechaFin").datepicker({ format: 'yyyy-mm-dd' });
    </script>

{% endblock %}



