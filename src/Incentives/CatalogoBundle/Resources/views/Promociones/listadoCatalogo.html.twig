{% block content %}

<div class="row">
	<div class="col-md-12">
	    <div class="box box-warning">
		    <div class="box-header bg-black">
				<h3 class="box-title">Listado Promociones</h3>
			</div>
			<div class="box-body">
				<table class="table table-bordered table-striped table-condensed dataTable">
					<thead>
						<tr>
