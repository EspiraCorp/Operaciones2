							<td>{{ promocion.puntos }}</td>
							<td>{{ promocion.fechaInicio | date("Y-m-d") }}</td>
							<td>{{ promocion.fechaFin | date("Y-m-d") }}</td>
							<td>{{ promocion.estado.nombre }}</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>	

