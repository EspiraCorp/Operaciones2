{% extends "::basePopLte.html.twig" %}

{% block title %}Ingreso Inventario{% endblock %}

{% block content %}

     <div class="">
          <div class="modal-dialog box box-warning">
            <div class="modal-content">
              <div class="modal-header bg-black">
                <h4 class="modal-title">Ingreso Inventario</h4>
              </div>
              <form method="POST" action="{{ path('inventario_ingreso') }}" class="form-horizontal">
              <div class="modal-body">
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.producto, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.producto, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.cantidad, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.valorCompra, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.valorCompra, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4 control-label">{{ form_label(form.observacion, label|default(), { 'label_attr': { 'class': 'control-label' } }) }}</label>
                  <div class="col-sm-8">
                    {{ form_widget(form.observacion, { 'attr': {'class': 'form-control'} }) }}
                  </div>
                </div>
                {{ form_widget(form._token) }}
              </div>
              <div class="modal-footer bg-black">
                <button class="btn btn-warning bg-black" type="submit">Enviar</button>
              </div>
              </form>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
    </div>
{% endblock %}